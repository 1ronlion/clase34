<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + product.name}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i> <%= product.name %>  </i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%= product.id %>?_method=PATCH" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value="<%= product.name %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="<%= product.price %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" value="<%= product.discount %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="" disabled> Selecionar categoría </option>
							<option value="in-sale" <%= product.category === 'in-sale' ? 'selected' : '' %> >En oferta</option>
							<option value="visited" <%= product.category === 'visited' ? 'selected' : '' %> >Últimos visitados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= product.description %></textarea>
					</div>
					<div class="col-12">
						<label for="image" class="form-label">Imagen</label>
						<input type="file" name="image" class="form-input">
					</div>
					<div class="col-12">
						<button type="" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>